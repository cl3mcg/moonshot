<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Moonshot | Login</title>
    <%- include("../partials/commonStyles.ejs") %>
    <%- include("../partials/commonFonts.ejs") %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
</head>
<body>
    <%- include("../partials/navbar.ejs") %>
    <div class="container">
        <div class="row">
          <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card rounded shadow my-5">
              <div class="card-body p-4 p-sm-5">
                <h1 class="card-title text-center mb-5">Sign In</h1>
                <form action="/user/login" method="POST" class="needs-validation" novalidate>
                  <div class="form-floating mb-3">
                    <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" name="username" required>
                    <label for="floatingInput">Email address</label>
                  </div>
                  <div class="form-floating mb-3">
                    <input type="password" class="form-control" id="floatingPassword" placeholder="Password" name="password" required>
                    <label for="floatingPassword">Password</label>
                  </div>
                  <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" value="rememberPassword" id="rememberPassword">
                    <label class="form-check-label" for="rememberPassword">
                      Remember password
                    </label>
                  </div>
                  <div class="d-grid">
                    <button id="submitBtn" class="btn btn-primary" type="submit"><i class="bi bi-box-arrow-in-right me-2"></i>Login</button>
                  </div>
                </form>
                  <div class="d-grid mb-2 mt-4 btn-okta" data-bs-toggle="tooltip" data-bs-placement="top" title="Coming soon">
                    <button class="btn btn-outline-secondary" disabled>Sign in with OKTA</button>
                  </div>
                  <hr class="my-4">
                  <div class="d-grid">
                    <a class="btn btn-light" href="/user/registration" role="button">Don't have an account yet ? <strong class="text-primary">Register here</strong></a>
                  </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <%- include("../partials/commonBootstrap.ejs") %>
    <script src="/js/loginRegisterForm.js"></script>
</body>
</html>